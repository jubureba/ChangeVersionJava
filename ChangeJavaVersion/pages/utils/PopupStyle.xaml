<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="PopupContentStyle" TargetType="ContentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid x:Name="grid" Background="White">
                        <Rectangle Fill="White" Stroke="Gray" StrokeThickness="2" Margin="0,0,0,9" />
                        <StackPanel Margin="15,15,15,25">
                            <ContentPresenter />
                        </StackPanel>
                        <Path x:Name="arrow" Grid.Row="1" Data="M 0 9 9 18 18 9" Fill="White" Stroke="Gray" StrokeThickness="2"
                                  VerticalAlignment="Bottom" HorizontalAlignment="Left">
                        </Path>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



</ResourceDictionary>